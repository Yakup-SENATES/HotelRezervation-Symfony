{% extends 'adminbase.html.twig' %}

{% block title %}Category Home Page
{% endblock %}

{% block body %}

	{{ include('admin/admin/adminHead.html.twig') }}


	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Parentid</th>
				<th>Title</th>
				<th>Keywords</th>
				<th>Description</th>
				<th>Image</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.parentid }}</td>
					<td>{{ category.title }}</td>
					<td>{{ category.keywords }}</td>
					<td>{{ category.description }}</td>
					<td>{{ category.image }}</td>
					<td>{{ category.status }}</td>
					<td>
						<a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-block btn-info">show</a>
					</td>
					<td>
						<a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-block btn-info">edit</a>
					</td>
				</tr>
			</td>
		</tbody>
	</tr>
{% else %}
	<tr>
		<td colspan="10">no records found</td>
	</tr>
{% endfor %}</tbody></table><a href="{{ path('admin_category_new') }}" class="btn btn-warning my-4">Create new</a>{{ include('admin/admin/adminFooter.html.twig') }}{% endblock %}
