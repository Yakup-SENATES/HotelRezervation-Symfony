{% extends 'adminbase.html.twig' %}

{% block title %}Messages
{% endblock %}

{% block body %}

	{{ include('admin/admin/adminHead.html.twig') }}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ message.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ message.name }}</td>
			</tr>
			<tr>
				<th>Subject</th>
				<td>{{ message.subject }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ message.message }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ message.status }}</td>
			</tr>
			<tr>
				<th>Ip</th>
				<td>{{ message.ip }}</td>
			</tr>
			<tr>
				<th>Note</th>
				<td>{{ message.note }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated_at</th>
				<td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_messages_index') }}" class="btn btn-warning py-0">back to list</a>

	<a href="{{ path('admin_messages_edit', {'id': message.id}) }}" class="btn btn-warning py-0">edit</a>

	{{ include('admin/messages/_delete_form.html.twig') }}

	{{ include('admin/admin/adminFooter.html.twig') }}

{% endblock %}
