<form method="post" action="{{ path('admin_messages_delete', {'id': message.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">

	<div class="col-md-2 my-2">
		<button class="btn btn-danger py-0">Delete</button>
	</div>
</form>
