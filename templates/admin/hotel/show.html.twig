{% extends 'adminbase.html.twig' %}

{% block title %}Hotel
{% endblock %}

{% block body %}


	{{ include('admin/admin/adminHead.html.twig') }}


	<table class="table table-bordered">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ hotel.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ hotel.title }}</td>
			</tr>
			<tr>
				<th>Keywords</th>
				<td>{{ hotel.keywords }}</td>
			</tr>
			<tr>
				<th>Descripton</th>
				<td>{{ hotel.description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset('uploads/images/' ~ hotel.image) }}" height="40">
					{{ hotel.image }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ hotel.status }}</td>
			</tr>
			<tr>
				<th>Star</th>
				<td>{{ hotel.star }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ hotel.address }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ hotel.phone }}</td>
			</tr>
			<tr>
				<th>Fax</th>
				<td>{{ hotel.fax }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ hotel.email }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ hotel.city }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ hotel.country }}</td>
			</tr>
			<tr>
				<th>Location</th>
				<td>{{ hotel.location }}</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('admin_hotel_index') }}" class="btn btn-warning py-0">back to list</a>

	<a href="{{ path('admin_hotel_edit', {'id': hotel.id}) }}" class="btn btn-warning py-0">edit</a>

