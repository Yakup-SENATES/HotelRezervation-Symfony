{% extends 'adminbase.html.twig' %}

{% block title %}Hotel index
{% endblock %}

{% block body %}
	<SCRIPT language="JavaScript" type="text/javascript">
		function openWin(windowURL, windowName, windowFeatures) {
window.open(windowURL, windowName, windowFeatures);
}
	</SCRIPT>

	{{ include('admin/admin/adminHead.html.twig') }}


	<table class="table table-striped">

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Category</th>
					<th>Title</th>


					<th>Image</th>
					<th>Status</th>
					<th>Star</th>
					<th>Phone</th>

					<th>Email</th>
					<th>City</th>
					<th>User</th>

					<th>I.Image</th>
					<th>Rooms</th>
					<th>Show</th>
					<th>Edit</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for hotel in hotels %}
					<tr>
						<td>{{ hotel.id }}</td>
						<td>{{hotel.catname}}</td>
						<td>{{ hotel.title }}</td>

						<td>
							<img src="{{ asset('uploads/images/' ~ hotel.image) }}" height="40">
						</td>
						<td>{{ hotel.status }}</td>
						<td>{{ hotel.star }}</td>

						<td>{{ hotel.phone }}</td>

						<td>{{ hotel.email }}</td>
						<td>{{ hotel.city }}</td>
						<td>
							<a href="{{path('admin_user_show', {'id': hotel.userid})}}">
								{{ hotel.name }}
								{{ hotel.surname }}
							</a>
						</td>

						{# tre #}
						<td>
							<a href="javascript:openWin('{{ path('admin_image_new', {'id': hotel.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
								<img src="{{ asset('assets/admin/img') }}/gallery.png" height="40" title="Ä°mage Gallery">
							</a>
						</td>
						<td>
							<a href="javascript:openWin('{{ path('admin_room_new', {'id': hotel.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
								<img src="{{ asset('assets/admin/img') }}/room.png" height="40" title="Rooms">
							</a>
						</td>


						{# tre #}
						<td>
							<a href="{{ path('admin_hotel_show', {'id': hotel.id}) }}" class="btn btn-block btn-default">show</a>

						</td>
						<td>
							<a href="{{ path('admin_hotel_edit', {'id': hotel.id}) }}" class="btn btn-block btn-info">edit</a>
						</td>
						<td>
							{{ include('admin/hotel/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="17">no records found</td>class="btn btn-block btn-info"
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{#<a href="{{ path('admin_hotel_new') }}" class="btn btn-warning my-3">Create new</a>#}


		{{ include('admin/admin/adminFooter.html.twig') }}
	{% endblock %}
