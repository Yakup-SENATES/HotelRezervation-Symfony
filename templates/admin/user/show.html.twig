{% extends 'adminbase.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}

	{{ include('admin/admin/adminHead.html.twig') }}


	<table class="table table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ user.name }}</td>
			</tr>
			<tr>
				<th>Surname</th>
				<td>{{ user.surname }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset('uploads/images/' ~ user.image) }}" height="90"></td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ user.status }}</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('admin_user_index') }}" class="btn btn-warning py-0">back to list</a>

	<a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning py-0">edit</a>

	{{ include('admin/user/_delete_form.html.twig') }}


	{{ include('admin/admin/adminFooter.html.twig') }}
{% endblock %}
